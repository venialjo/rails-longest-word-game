<div class="half-centered">
  <h2>Here are your letters:</h2>
  <br>
  <ul>
    <% @letters.each do |letter| %>
      <li class="inline tile"><%= letter %></li>
    <% end %>
  </ul>
  <br>
  <br>
  <p>WRITE YOUR BEST WORD BELOW!</p>
  <div class="input">
    <form action="/score">
      <input class="form-text" type="text" name="answer">
      <br>
      <br>
      <input class="form-button" type="submit" value="Submit">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>

</div>
